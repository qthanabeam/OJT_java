<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm
        id="addEmployeeForm"
        editable="true"
        layout="ColumnLayout"
        title="{i18n>newEmployee}"
    >
        <f:content>
            <Label
                id="_IDGenLabel"
                text="{i18n>firstName}"
            />
            <Input
                id="_IDGenInput1"
                value="{newEmployee>/firstName}"
            />
            <Label
                id="_IDGenLabel1"
                text="{i18n>lastName}"
            />
            <Input
                id="_IDGenInput2"
                value="{newEmployee>/lastName}"
            />
            <Label
                id="_IDGenLabel2"
                text="{i18n>dateOfBirth}"
            />
            <DatePicker
                id="_IDGenDatePicker"
                valueFormat="yyyy-MM-dd"
                value="{path: 'newEmployee>/dateOfBirth'}"
            />
            <Label
                id="_IDGenLabel3"
                text="{i18n>gender}"
            />
            <Input
                id="_IDGenInput3"
                value="{newEmployee>/gender}"
            />
            <Label
                id="_IDGenLabel4"
                text="{i18n>email}"
            />
            <Input
                id="_IDGenInput4"
                value="{newEmployee>/email}"
            />
            <Label
                id="_IDGenLabel5"
                text="{i18n>hireDate}"
            />
            <DatePicker
                id="_IDGenDatePicker1"
                valueFormat="yyyy-MM-dd"
                value="{path: 'newEmployee>/hireDate'}"
            />
            <Label
                id="_IDGenLabel6"
                text="{i18n>role}"
            />
            <ComboBox
                id="_IDGenComboBox"
                items="{/Roles}"
                selectedKey="{newEmployee>/role_ID}"
            >
                <core:Item
                    id="_IDGenItem"
                    key="{ID}"
                    text="{name}"
                />
            </ComboBox>
            <Label
                id="_IDGenLabel7"
                text="{i18n>department}"
            />
            <ComboBox
                id="_IDGenComboBox1"
                items="{/Departments}"
                selectedKey="{newEmployee>/department_ID}"
            >
                <core:Item
                    id="_IDGenItem1"
                    key="{ID}"
                    text="{name}"
                />
            </ComboBox>
            <Label
                id="_IDGenLabel8"
                text="{i18n>performanceRating}"
            />
            <Input
                id="_IDGenInput5"
                value="{newEmployee>/performanceRating}"
                type="Number"
            />
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
